                    <td class="fieldValue">
                        <apex:outputField value="{!Credit_Assessment__c.Principal_Daily_Repayments_Approved__c}" rendered="{!Credit_Assessment__c.FOC__c != 'Weekly'}"/>
                        <apex:outputField value="{!Credit_Assessment__c.Principal_Weekly_Repayments_Approved__c}" rendered="{!Credit_Assessment__c.FOC__c == 'Weekly'}"/>
                    </td>
                </tr>
                
                <tr>
                    <td>
                        <apex:outputlabel styleClass="fieldLabel" value="{!$ObjectType.Credit_Assessment__c.fields.Interest_Daily_Repayment_Requested__c.Label}"
                        rendered="{!Credit_Assessment__c.FOC__c != 'Weekly'}"/>
                        <apex:outputlabel styleClass="fieldLabel" value="{!$ObjectType.Credit_Assessment__c.fields.Interest_Weekly_Repayment_Requested__c.Label}"
                        rendered="{!Credit_Assessment__c.FOC__c == 'Weekly'}"/>
                    </td>
                    <td class="fieldValue borderRight">
                        <apex:outputField value="{!Credit_Assessment__c.Interest_Daily_Repayment_Requested__c}" rendered="{!Credit_Assessment__c.FOC__c != 'Weekly'}"/>
                        <apex:outputField value="{!Credit_Assessment__c.Interest_Weekly_Repayment_Requested__c}" rendered="{!Credit_Assessment__c.FOC__c == 'Weekly'}"/>
                    </td>
                    <td>
                        <apex:outputlabel styleClass="fieldLabel" value="Interest Repayment (Offer)"/>
                    </td>
                    <td class="fieldValue borderRight"><apex:outputField value="{!Credit_Assessment__c.Interest_Daily_Repayment_Offer__c}"/></td>
                    <td>
                           <apex:outputlabel styleClass="fieldLabel" value="{!$ObjectType.Credit_Assessment__c.fields.Interest_Daily_Repayment_Approved__c.Label}"
                           rendered="{!Credit_Assessment__c.FOC__c != 'Weekly'}"/>
                           <apex:outputlabel styleClass="fieldLabel" value="{!$ObjectType.Credit_Assessment__c.fields.Interest_Weekly_Repayment_Approved__c.Label}"
                           rendered="{!Credit_Assessment__c.FOC__c == 'Weekly'}"/>
                    </td>
                    <td class="fieldValue">
                        <apex:outputField value="{!Credit_Assessment__c.Interest_Daily_Repayment_Approved__c}"
                        rendered="{!Credit_Assessment__c.FOC__c != 'Weekly'}"/>
                        <apex:outputField value="{!Credit_Assessment__c.Interest_Weekly_Repayment_Approved__c}"
                        rendered="{!Credit_Assessment__c.FOC__c == 'Weekly'}"/>
                    </td>
                </tr>
                
                <tr>
                    <td>
                        <apex:outputlabel styleClass="fieldLabel" value="{!$ObjectType.Credit_Assessment__c.fields.Total_Daily_Repayment_Requested__c.Label}"
                        rendered="{!Credit_Assessment__c.FOC__c != 'Weekly'}"/>
                        <apex:outputlabel styleClass="fieldLabel" value="{!$ObjectType.Credit_Assessment__c.fields.Total_Weekly_Repayment_Requested__c.Label}"
                        rendered="{!Credit_Assessment__c.FOC__c == 'Weekly'}"/>
                    </td>
                    <td class="fieldValue borderRight">
                        <apex:outputField value="{!Credit_Assessment__c.Total_Daily_Repayment_Requested__c}"
                        rendered="{!Credit_Assessment__c.FOC__c != 'Weekly'}"/>
                        <apex:outputField value="{!Credit_Assessment__c.Total_Weekly_Repayment_Requested__c}"
                        rendered="{!Credit_Assessment__c.FOC__c == 'Weekly'}"/>
                    </td>
                    <td>
                        <apex:outputlabel styleClass="fieldLabel" value="Total Repayment (Offer)"/>
                    </td>
                    <td class="fieldValue borderRight"><apex:outputField value="{!Credit_Assessment__c.Total_Daily_Repayment_Offer__c}"/></td>
                    <td>
                           <apex:outputlabel styleClass="fieldLabel" value="{!$ObjectType.Credit_Assessment__c.fields.Total_Daily_Repayment_Approved__c.Label}"
                           rendered="{!Credit_Assessment__c.FOC__c != 'Weekly'}"/>
                           <apex:outputlabel styleClass="fieldLabel" value="{!$ObjectType.Credit_Assessment__c.fields.Total_Weekly_Repayment_Approved__c.Label}"
                           rendered="{!Credit_Assessment__c.FOC__c == 'Weekly'}"/>
                    </td>
                    <td class="fieldValue">
                        <apex:outputField value="{!Credit_Assessment__c.Total_Daily_Repayment_Approved__c}"
                        rendered="{!Credit_Assessment__c.FOC__c != 'Weekly'}"/>
                        <apex:outputField value="{!Credit_Assessment__c.Total_Weekly_Repayment_Approved__c}"
                        rendered="{!Credit_Assessment__c.FOC__c == 'Weekly'}"/>
                    </td>
                </tr>
                
                <tr>
                    <td>
                        <apex:outputlabel styleClass="fieldLabel" value="{!$ObjectType.Credit_Assessment__c.fields.Total_Amount_Repayable_Requested__c.Label}"/>
                    </td>
                    <td class="fieldValue borderRight">
                        <apex:outputField value="{!Credit_Assessment__c.Total_Amount_Repayable_Requested__c}"
