                        rendered="{!Credit_Assessment__c.FOC__c == 'Weekly'}"/>
                    </td>
                    <td>
                        <apex:outputlabel styleClass="fieldLabel" value="{!$ObjectType.Credit_Assessment__c.fields.Total_Amount_Repayable_Offer__c.Label}"/>
                    </td>
                    <td class="fieldValue borderRight"><apex:outputField value="{!Credit_Assessment__c.Total_Amount_Repayable_Offer__c}"/></td>
                    <td>
                           <apex:outputlabel styleClass="fieldLabel" value="{!$ObjectType.Credit_Assessment__c.fields.Total_Amount_Repayable_Approved__c.Label}"/>
                    </td>
                    <td class="fieldValue">
                        <apex:outputField value="{!Credit_Assessment__c.Total_Amount_Repayable_Approved__c}"
                        rendered="{!Credit_Assessment__c.FOC__c != 'Weekly'}"/>
                        <apex:outputField value="{!Credit_Assessment__c.Total_Amount_Repayable_Approved__c}"
                        rendered="{!Credit_Assessment__c.FOC__c == 'Weekly'}"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</apex:page>